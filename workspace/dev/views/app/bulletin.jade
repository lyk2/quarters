extends ./app.jade

block content
	div.row
		div.col-lg-12
			h1.page-header Bulletin Board
	div.row
		div.col-lg-1
		div.col-xs-12.col-lg-10
			.input-group
				.input-group-btn
					button.btn.btn-default(type="button")
						span.glyphicon.glyphicon-plus
						span.hidden-xs New Post
					button.btn.btn-default(type="button")
						span.glyphicon.glyphicon-option-vertical
				input.form-control(type='text', placeholder="Search for")
				.input-group-btn(style="border-left: 0; border-right: 0;")
					button.btn.btn-default(type="button")
						span.glyphicon.glyphicon-search
				.input-group-btn
					button.btn.btn-default(type="button")
						span.glyphicon.glyphicon-option-vertical
				.input-group-btn
					button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
