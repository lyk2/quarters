#newPost.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
	.modal-dialog(role='document')
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') ×
				h4#myModalLabel.modal-title New post
			.modal-body
				textarea#newPostContent
			.modal-footer
				button#newPostBtn.btn.btn-primary(type='button') Create Post
				button.btn.btn-default(type='button', data-dismiss='modal') Close


#deletePost.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
	.modal-dialog(role='document')
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') ×
				h4#myModalLabel.modal-title Are you sure you want to delete post
				h4#deletePostId(style="display:none")
			.modal-footer
				button#deletepostbtn.btn.btn-primary(type='button') Delete
				button.btn.btn-default(type='button', data-dismiss='modal') Cancel
