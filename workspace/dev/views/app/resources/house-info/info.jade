// includes the general information section for documents

.row(style="padding-top:30px")
	.col-lg-12
		.panel.panel-info
			.panel-heading
				h3.panel-title General Information
				input.btn.btn-default.panel-btn(type='button', value='Modify')
			.panel-body
				.col-lg-6.col-sm-12
					h4 House
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') Address
						input.form-control(type='text' value='#{info.address}')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') City
						input.form-control(type='text' value='#{info.city}')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') Province
						input.form-control(type='text' value='#{info.province}')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') Country
						input.form-control(type='text' value='#{info.country}')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') Postal Code
						input.form-control(type='text' value='#{info.postal_code}')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:30%') Invite Code
						input.form-control(type='text' value='#{info.invite_code}')
				.col-lg-6.col-sm-12
					h4 Financials
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:40%') Rent Information
						input.form-control(type='text')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:40%') Utilities
						input.form-control(type='text')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:40%') Internet
						input.form-control(type='text')
					.input-group(style='width:90%')
						span.input-group-addon.readonly(style='width:40%') Security Deposits
						input.form-control(type='text')
